/* components/wx-tab/wx-tab.wxss */
.tab {
  display: flex;
  justify-content: space-around;
}
.ontab {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.ontab-line {
    width: 30rpx;
    padding: 12rpx 10rpx;
    border-bottom: 8rpx solid #333333;
    border-radius: 4rpx;
}
.none-active {
  color: #999999;
  font-family: PingFang SC;
  font-size: 28rpx;
}
.active {
  color: #333333;
  font-weight:bold;
}