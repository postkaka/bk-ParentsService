/* pages/discount-coupon/discount-coupon.wxss */
page {
    background: #184571;
}
.bg {
    height: 500rpx;
    background: #FFFFFF;
    opacity: 1;
    border-radius: 0px 0px 50rpx 50rpx;
}
.coupon {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 16rpx;
}
.btn {
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    height: 80rpx;
    background: #184571;
    border: 2rpx solid #FFFFFF;
    opacity: 1;
    border-radius: 30rpx;
    margin-bottom: 32rpx;
    margin-left: 32rpx;
    margin-right: 32rpx;
    text-align: center;
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    display: flex;
    justify-content: center;
    align-items: center;
}
.newbg {
	height: 100%;
	width: 100%;
	position: fixed;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 2;
	top: 0;
	left: 0;
}
.box {
    width: 100%;
    height: 627rpx;
    position: fixed;
    border-radius: 40rpx 40rpx 0px 0px;
    background: #FFFFFF;
    bottom: 0;
    left: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.box-item {
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #184571;
    opacity: 1;
}
.box-circle {
    display: flex;
    align-items: center;
    background-color: #184571;
    height: 170rpx;
    width: 170rpx;
    border-radius: 50%;
    margin-top: 120rpx;
    margin-bottom: 43rpx;
}
.box-circle image {
    align-items: center;
}
.box-item {
    text-align: center;
}

