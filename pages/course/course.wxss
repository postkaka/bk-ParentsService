/* pages/course/course.wxss */
page {
    background-color: #f5f5f5 ;
    overflow: hidden
}
.bg {
    display: none;
    position: absolute;
    top: 600rpx;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 1001;
    -moz-opacity: 0.7;
    opacity: 0.70;
    filter: alpha(opacity=70);
  }
.course {
    display: flex;
    height: 236rpx;
    margin-left: 17rpx;
    margin-right: 32rpx;
    margin-top: 32rpx;
    
}
.course view {
    border-radius: 30rpx;
    border: 1rpx solid #ffffff;
    margin-left: 15rpx;
    height: 172rpx;
   
}
.course image {
    height: 172rpx;
    width: 160rpx;
}
.disshow {
    display: none;
}
.show {
    position: absolute;
    left: 0;
    right: 0;
    top: 230rpx;
    display: flex;
    height: 392rpx;
    background-color: #FFFFFF;
    justify-content: space-between;
    z-index: 100;
}
.show-list {
    display: flex;
    flex-direction: column;
    margin-top: 32rpx;
    margin-left:23rpx;
    margin-right:23rpx;
}
.item {
    width: 100%;
    margin-bottom: 32rpx;
    color: #333333;
    font-family: PingFang SC;
    font-size: 28rpx;
}
.show-lists {
    border-left: 2rpx solid #DDDDDD;
    padding-left: 40rpx;
}
.viewActive {
    background-color: #DDDDDD;
    border: 1rpx solid  #DDDDDD;
    border-radius: 10rpx;
}
.active {
    box-shadow: 0px 10px 30px rgba(0, 36, 68, 0.16);
}
