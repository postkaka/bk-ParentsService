/* pages/order/order.wxss */
.tab {
    margin-top: 57rpx;
    margin-bottom: 32rpx;
    display: flex;
}
.order {
    margin: 32rpx,0, 32rpx,0;
    background: #FFFFFF;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.order-list {
    width: 686rpx;
    height: 462rpx;
    background: #FFFFFF;
    border: 2rpx solid #DDDDDD;
    opacity: 1;
    border-radius: 30rpx;
}
.order-list-one {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    
}
.order-list-one-name {
    display: flex;
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #333333;
    margin:32rpx;
}
.order-list-one-name image {
    margin-left: 32rpx;
}
.order-list-one-type {
    margin:32rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #333333;
}
.oreder-line {
    height: 2rpx;
    border: 1rpx solid #DDDDDD;
    opacity: 1;
}
.order-list-two {
    display: flex;
}
.order-list-two-image {
    display: flex;
}
.order-list-two-image-item {
    margin: 32rpx;
}
.order-list-two-image-items {
    margin-top: 32rpx;
    margin-bottom:32rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #333333;
    display: flex;
    flex-direction: column;
    justify-content: center;

}
.order-list-two-image-items-text {
    margin-top: 10rpx;
    font-weight: 400;
}
.order-list-two-classPrice {
    margin-top:53rpx ;
