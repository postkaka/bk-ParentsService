/* pages/timetable/timetable.wxss */
page {
    background: #184571;
}
.bg {
    height: 420rpx;
    width: 100%;    
    background: #FFFFFF;
    opacity: 1;
    border-radius: 0px 0px 50rpx 50rpx;
}
.newbg {
    height: 780rpx;
    width: 100%;    
    background: #FFFFFF;
    opacity: 1;
    border-radius: 0px 0px 50rpx 50rpx;
}
.more-title {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    opacity: 1;
    text-align: center;
    margin-top: 32rpx;
    margin-bottom: 32rpx;
}
.last-title {
    position: absolute;
    bottom: 0;
    font-size: 20rpx;
    height: 78rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    opacity: 1;
    margin:  40rpx 32rpx 40rpx;
}
.box {
    height: 160rpx;
    background: #FFFFFF;
    opacity: 1;
    border-radius: 30rpx;
    margin: 32rpx 32rpx 0 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.newbox {
    height: 160rpx;
    background: #FFFFFF;
    opacity: 1;
    border-radius: 30rpx 30rpx 0px 0px;
    margin: 32rpx 32rpx 0 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.history-week {
    margin-bottom: 32rpx;
}
.box-text-1 {
    display: flex;
    align-items: baseline;
    margin-top: 32rpx;
    margin-left: 32rpx;
    margin-bottom: 8rpx;

}
.box-name {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 46rpx;
    color: #333333;
    opacity: 1;
    margin-left: 16rpx;
}
.box-week {
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #184571;
    opacity: 1;
    align-items: center;
}
.box-image {
    margin-right: 32rpx;
}
.box-time {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 46rpx;
    color: #999999;
    opacity: 1;
    margin-left: 32rpx;
    margin-bottom: 32rpx;
}
.new-last-title {
    font-size: 20rpx;
    height: 78rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    opacity: 1;
    margin:  40rpx 32rpx 40rpx;
}
.boxitem {
    height: 160rpx;
    background: #FFFFFF;
    opacity: 1;
    border-radius: 30rpx 30rpx 0rpx 0rpx;
    margin: 32rpx 32rpx 0 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.boxitemtext {
    display: flex;
    flex-direction: column;
}
.boxitemtext-name {
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #184571;
    opacity: 1;
    margin-bottom: 8rpx;
    margin-left: 40rpx;
}
.boxitemimage {
    display: flex;
    align-items: center;
    margin-top: 8rpx;
    margin-left: 40rpx;
}
.boxitemtime {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999999;
    margin-left: 8rpx;
}
.boxline {  
    height: 2rpx;
    background: #EEEEEE;
    opacity: 1;
    margin: 0 32rpx 0 32rpx;
}
.lastboxitem { 
    height: 104rpx;
    background: #FFFFFF;
    opacity: 1;
    border-radius: 0px 0px 30rpx 30rpx;
    margin: 0rpx 32rpx 0 32rpx;
    display: flex;
    justify-content: space-between;
}
.lastboxitem-item {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999999;
    opacity: 1;
    margin-top: 32rpx;
    margin-left: 40rpx;
}
.lastboxitem-last {
    width: 80rpx;
    height: 28rpx;
    background: #F25A43;
    align-items: center;
    text-align: center;
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    margin-top: 32rpx;
    margin-right: 32rpx;
    border-radius: 40rpx;
}
.newboxitem {
    height: 160rpx;
    background: #FFFFFF;
    opacity: 1;
    margin: 0rpx 32rpx 0 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.newlastboxitem {
    height: 104rpx;
    background: #FFFFFF;
    opacity: 1;
    margin: 0rpx 32rpx 0 32rpx;
