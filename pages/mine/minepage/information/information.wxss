/* pages/mine/minepage/information/information.wxss */
page {
    background-color: #FFFFFF;
    overflow: hidden;
}
.side {
    width: 100%;
    border: 1rpx solid #DDDDDD;
}
.information {
    height: 100%;
    margin-bottom: 30rpx;
}
.information-view {
    height: 26rpx;
    font-size: 24rpx;
    font-family: Source Han Sans CN;
    font-weight: 500;
    line-height: 41rpx;
    color: #F25A43;
    opacity: 1;
    margin: 32rpx;
}
.line {
    border-bottom: 1rpx solid #dddddd;
}
.information-image {
    display: flex;
    justify-content: space-between;
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-top: 32rpx;
    margin-bottom: 10rpx;
}
.information-choose {
    height: 130rpx;
    line-height: 130rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    color: #999999;
}
.item-list {
    display: flex;
    justify-content: space-between;
    margin: 28rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    line-height: 40rpx;
    color: #333333;
}
.btn {
    height: 80rpx;
    border: 1rpx solid #184571;
    background-color: #184571;
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-bottom: 32rpx;
    border-radius: 30rpx;
    text-align: center;
}
.btn-view {
    font-size: 34rpx;
    font-family: PingFang SC;
    line-height: 80rpx;
    font-weight: 400;
    color: #FFFFFF;
    opacity: 1;
}

