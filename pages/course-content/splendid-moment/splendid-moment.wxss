/* pages/course-content/splendid-moment/splendid-moment.wxss */
page {
    background-color: #184571;
	overflow: hidden;
}
.box {
    position: relative;
    top: -30rpx;
    height: 100vh;
    border: 2rpx solid #F5F5F5;
    border-top-left-radius:50rpx;
    border-top-right-radius:50rpx;
    background-color: #F5F5F5;
    font-size: 28rpx;
    font-family: PingFang SC;
    color: #333333;
    font-weight: 400;
}
.bor {
    margin-left: 32rpx;
    margin-right: 32rpx;
    background: #FFFFFF;
}
.box1 {
    margin-top: 32rpx;
    margin-bottom: 2rpx;
    height: 112rpx;
    border-radius: 30rpx 30rpx 0rpx 0rpx;
    display: flex;
    align-items: center;
}
.box1-text {
    align-items: center;
    margin-left: 32rpx;
    height: 48rpx;
    font-size: 32rpx;
    font-weight: bold;
    line-height: 46rpx;
    
    opacity: 1;
}
.box2 {
    height: 104rpx;
    margin-bottom: 2rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.box-view {
    margin-left: 32rpx;
}
.box-image {
    display: flex;
    align-items: center;
}
.box-image image {
    margin-right: 21rpx;
}
.box-image-view {
    margin-right: 32rpx;
    margin-left: 13rpx;
}
.box3 {
    height: 200rpx;
    margin-bottom: 2rpx;
    display: flex;
    flex-direction: column;
}
.box3-item {
    margin-left: 32rpx;
}
.fisrt {
    margin-top: 32rpx;
    margin-bottom: 8rpx;
}
.last {
    margin-top: 8rpx;
    margin-bottom: 32rpx;
}
.color {
    color: #999999;
}
.box4 {
    height: 200rpx;
    border-radius: 0rpx 0rpx 30rpx 30rpx;
    display: flex;
    flex-direction: column;
}
.btn { 
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-bottom: 32rpx;
    height: 80rpx;
    background: #184571;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.btn view {
    align-items: center;
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
}