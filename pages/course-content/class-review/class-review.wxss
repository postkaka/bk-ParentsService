page {
    background-color: #184571;
	overflow: hidden;
}
.box {
    position: relative;
    top: -30rpx;
    height: 100vh;
    border: 2rpx solid #F5F5F5;
    border-top-left-radius:50rpx;
    border-top-right-radius:50rpx;
    background-color: #F5F5F5;
}
.box1 {
	position: relative;
	height: 160rpx;
	background: #FFFFFF;
	border-radius: 30rpx 30rpx 0rpx 0rpx;
	margin-left: 32rpx;
	margin-top: 32rpx;
	margin-right: 32rpx;
	display: flex;
	flex-direction: column;
}
.box1-text {
	height: 48rpx;
	font-size: 34rpx;
	font-family: PingFang SC;
	font-weight: bold;
	line-height: 46rpx;
	color: #333333;
	opacity: 1;
	margin-top: 32rpx;
	margin-left: 32rpx;
	margin-bottom: 8rpx;
	align-items: center;
}
.box1-item {
	height: 40rpx;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 46rpx;
	color: #333333;
	opacity: 1;
	margin-left: 32rpx;
	margin-right: 32rpx;
}
.box2 {
	height: 160rpx;
	background: #FFFFFF;
	opacity: 1;
	border-radius: 0rpx 0rpx 30rpx 30rpx;
	margin-left: 32rpx;
	margin-right: 32rpx;
	margin-top: 2rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.box2view {
	margin-left: 28rpx;
}
.large {
	height: 40rpx;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 46rpx;
	color: #333333;
	opacity: 1;
}

.box2image {
	display: flex;
	justify-content: flex-end;
	margin-right: 32rpx;
}
.box2images {
	margin-right: 8rpx;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 500;
	line-height: 46rpx;
	color: #333333;
	opacity: 1;
}
.box2s {
	display: flex;
	align-items: center;
}
.box2ss {
	align-items: center;
}
.fixed {
	position: absolute;
	top: 32rpx;
	right: 32rpx;
	width: 90rpx;
	height: 30rpx;
	background: #F25A43;
	opacity: 1;
	border-radius: 15rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.fixed-item {
	width: 66rpx;
	font-size: 22rpx;
	font-family: PingFang SC;
	font-weight: 400;
	line-height: 46rpx;
	color: #FFFFFF;
	opacity: 1;
}
.box3 {
	height: 112rpx;
	background: #FFFFFF;
	opacity: 1;
	border-radius: 30rpx;
	margin-bottom: 32rpx;
	margin-left: 32rpx;
	margin-right: 32rpx;
