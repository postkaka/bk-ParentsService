/* pages/hour/classhour/classhour.wxss */
page {
    background-color: #184571;
}
.box {
    position: relative;
    top: -30rpx;
    height: 100vh;
    border: 2rpx solid #F5F5F5;
    border-top-left-radius:50rpx;
    border-top-right-radius:50rpx;
    background-color: #F5F5F5;
}
.list {
    position: relative;
    border: 2rpx solid #DDDDDD;
    background-color: #FFFFFF;
    margin: 32rpx;
    border-radius: 30rpx;   
    font-family: PingFang SC;
}
.list-item {
    margin-left: 18rpx;
    margin-top: 16rpx;
}
.list-item-line {
    border-bottom: 1rpx solid #DDDDDD;
    margin-right: 32rpx;
    margin-top: 16rpx;
}
.smalllist {
    position: relative;
    /* height: 258rpx; */
    border: 2rpx solid #DDDDDD;
    background-color: #FFFFFF;
    margin: 32rpx;
    border-radius: 30rpx;   
    font-family: PingFang SC;
}
.smalllist-fist {
    display: flex;
    margin: 32rpx;
    justify-content:space-between;
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 46rpx;
    color: #333333;
    opacity: 1;
}
.smalllist-fist-view-change {
    margin-left: 8rpx;
    margin-right: 10rpx;
}
.smalllist-fist-view {
    display: flex;
}
.line {
    border: 1rpx solid #DDDDDD;
}
.bg {
    height: 100%;
    width: 100%;
    position: fixed;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 2;
    top: 0;
    left: 0;
  }
  .bottom-button {
      width: 100%;
      height: 627rpx;
      position: fixed;
      border-radius: 40px 40px 0px 0px;
      background: #FFFFFF;
      bottom: 0;
      left: 0;
      z-index: 3;
  }
  .button {
      display: flex;
      margin-top: 32rpx;
      margin-left: 64rpx;
      margin-right: 64rpx;
      justify-content: space-between;     
      font-size: 34rpx;
      font-family: PingFang SC;
      font-weight: 400;
      line-height: 48rpx;
      height: 48rpx;
      color: #333333;
    }
    .last-line {
        margin-top: 32rpx;
    }
    .type {
        text-align: center;
        margin-top: 16rpx;
        margin-bottom: 16rpx;
        height: 38rpx;
        font-size: 27rpx;
        font-family: PingFang SC;
        font-weight: 400;
        line-height: 38rpx;
        color: #999999;
    }
    .type-item {
        margin-top: 16rpx;
        margin-bottom: 16rpx;
    }
    .active {   
        height: 46rpx;
        font-size: 33rpx;
        font-weight: bold;
        line-height: 46rpx;
        color: #333333;
        border-top: 2rpx solid #DDDDDD;
        border-bottom:2rpx solid #DDDDDD;
        padding-top: 16rpx;
        padding-bottom: 16rpx;
    }