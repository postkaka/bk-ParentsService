/* pages/hour/classhour/classhour.wxss */
page {
    background-color: #184571;
    overflow: hidden;
}
.box {
    position: relative;
    top: -30rpx;
    height: 100vh;
    border: 2rpx solid #F5F5F5;
    border-top-left-radius:50rpx;
    border-top-right-radius:50rpx;
    background-color: #F5F5F5;
}
.list {
    position: relative;
    height: 462rpx;
    border: 2rpx solid #DDDDDD;
    background-color: #FFFFFF;
    margin: 32rpx;
    border-radius: 30rpx;   
    font-family: PingFang SC;
}
.list-item {
    margin-left: 18rpx;
}
.smalllist {
    position: relative;
    height: 258rpx;
    border: 2rpx solid #DDDDDD;
    background-color: #FFFFFF;
    margin: 32rpx;
    border-radius: 30rpx;   
    font-family: PingFang SC;
}
.smalllist-fist {
    display: flex;
    margin: 32rpx;
    justify-content:space-between;
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 46rpx;
    color: #333333;
    opacity: 1;
}
.smalllist-fist-view-change {
    margin-left: 8rpx;
    margin-right: 10rpx;
}
.smalllist-fist-view {
    display: flex;
}
.line {
    border: 1rpx solid #DDDDDD;
}